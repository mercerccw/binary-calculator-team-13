<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="357.0" prefWidth="192.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.team13.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TextField fx:id="numberField" prefHeight="36.0" prefWidth="152.0" />
   <Label fx:id="evaluatedAnswer" text="123.3" />
   <Button mnemonicParsing="false" text="Binary" onMouseClicked="#toggleType" fx:id="ToggleButton"/>
    <AnchorPane prefHeight="200.0" prefWidth="200.0">
        <Button fx:id="zeroButton" layoutX="7.0" layoutY="18.0" minWidth="25.0" mnemonicParsing="false" onMouseClicked="#enterZero" prefHeight="25.0" prefWidth="32.0" text="0" />
        <Button fx:id="oneButton" layoutX="50.0" layoutY="18.0" mnemonicParsing="false" onMouseClicked="#enterOne" prefHeight="25.0" prefWidth="32.0" text="1" />
        <Button fx:id="additionButton" layoutX="7.0" layoutY="75.0" mnemonicParsing="false" onMouseClicked="#addClicked" prefHeight="25.0" prefWidth="32.0" text="+" />
        <Button fx:id="subtractionButton" layoutX="51.0" layoutY="75.0" mnemonicParsing="false" onMouseClicked="#subtractClicked" prefHeight="25.0" prefWidth="32.0" text="-" />
        <Button fx:id="multiButton" layoutX="7.0" layoutY="111.0" mnemonicParsing="false" onMouseClicked="#multiplyClicked" prefHeight="25.0" prefWidth="32.0" text="*" />
        <Button fx:id="divisionButton" layoutX="51.0" layoutY="111.0" mnemonicParsing="false" onMouseClicked="#divideClicked" prefHeight="25.0" prefWidth="32.0" text="/" />
        <Button fx:id="equalsButton" layoutX="96.0" layoutY="111.0" mnemonicParsing="false" onMouseClicked="#equalClicked" prefHeight="25.0" prefWidth="47.0" text="=" />
        <Button fx:id="squaredButton" layoutX="7.0" layoutY="150.0" mnemonicParsing="false" onMouseClicked="#squareClicked" prefHeight="25.0" prefWidth="32.0" text="x²" />
        <Button fx:id="sqrtButton" layoutX="50.0" layoutY="150.0" mnemonicParsing="false" onMouseClicked="#sqrtClicked" prefHeight="25.0" prefWidth="32.0" text="√x" />
        <Label fx:id="operationsLabel" layoutX="9.0" layoutY="51.0" text="Operations">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <Label fx:id="numberLabel" layoutX="9.0" layoutY="-8.0" text="Digits">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
      <Button layoutX="29.0" layoutY="188.0" mnemonicParsing="false" onAction="#toDecimal" text="Convert to Decimal" />
        <Button fx:id="clearButton" layoutX="100.0" layoutY="18.0" mnemonicParsing="false" onMouseClicked="#clearNumberField" text="Clear" />
    </AnchorPane>
</VBox>
